@using Data.Entities;
@using System.Security.Claims;
@model Data.Entities.Resume
@{
	ViewData["Title"] = "Details";
}

<div class="container">
	<div class="row mb-3">
		<div class="col-sm-6">
			<h3 class="display-3">@Model.Name</h3>
		</div>
		@if(Model.Jobseeker.AppUserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
		{
			<div class="col-sm-6 d-flex justify-content-end align-items-center">
				<a class="btn btn-outline-primary ms-3" asp-controller="VacancieRespond" asp-action="RespondsOfResume" asp-route-id="@Model.Id">
					Responds
				</a>
				<a class="btn btn-outline-primary ms-3" asp-action="Update" asp-route-id="@Model.Id">Edit your resume</a>
				<!-- Button trigger modal -->
				<button type="button" class="btn btn-outline-danger ms-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
					Delete
				</button>
			</div>

			<!-- Modal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<form method="post" asp-action="Delete">
					<input hidden asp-for="Id">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title fw-bold" id="exampleModalLabel">Are you sure?</h5>
								<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<div class="modal-body">
								<p class="text-danger">This resume will be deleted and all related data will be lost forever.</p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, go back</button>
								<button type="submit" class="btn btn-danger">Yes, delete this resume</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		}
		<hr />
	</div>
	<div class="row gx-5">
		<div class="col-sm-8">
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Description</label>
				<div class="col-sm-10 p-2">
					<p class="lead">@Model.Description</p>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Wanted salary</label>
				<div class="col-sm-10 p-2">
					<div class="input-group">
						<input type="number" disabled asp-for="WantedSalary" class="form-control" />
						<span class="input-group-text">$</span>
					</div>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Sphere</label>
				<div class="col-sm-10 p-2">
					<label>@Model.Sphere.Name</label>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Specialization</label>
				<div class="col-sm-10 p-2">
					<label>@Model.Specialization.Name</label>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Experience level</label>
				<div class="col-sm-10 p-2">
					<label>@Model.ExperienceLevel.Name</label>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">English level</label>
				<div class="col-sm-10 p-2">
					<label>@Model.EnglishLevel.Name</label>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Remoteness</label>
				<div class="col-sm-10 p-2">
					<label>@Model.Remoteness.Name</label>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">State</label>
				<div class="col-sm-10 p-2">
					<label>@Model.State.Name</label>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">City</label>
				<div class="col-sm-10 p-2">
					<label>@Model.City.Name</label>
				</div>
			</div>
		</div>

		<div class="col-sm-3">
			<div class="row mb-3">
				<p class="lead p-2">Keywords</p>
				@foreach (Keyword keyword in Model.Keywords)
				{
					<div class="col-auto">
						<span class="badge bg-primary text-light">@keyword.Name</span>
					</div>
				}
			</div>

			<div class="row mb-3">
				<p class="lead p-2">File</p>
				<a class="btn btn-outline-primary ms-2" href="@Model.DocumentPath"><i class="fa-regular fa-file"></i> Document</a>
			</div>
		</div>
	</div>
</div>