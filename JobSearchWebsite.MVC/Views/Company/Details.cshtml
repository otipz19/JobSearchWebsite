@model Utility.ViewModels.CompanyDetailsVm
@using System.Security.Claims
@using Data.Entities;
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-between">
        <div class="col-8">
            <h3 class="display-3">@Model.Company.Name profile</h3>
        </div>
        <div class="col-4">
            @if(User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.Company.AppUserId)
            {
                <div class="d-flex flex-row justify-content-end">
                    <a class="btn btn-outline-primary ms-3" asp-controller="VacancieRespond" asp-action="Index">
                        Responds
                    </a>
                    <a class="btn btn-outline-primary ms-3" asp-controller="JobOffer" asp-action="Index">
                        Offers
                    </a>
                    <a class="btn btn-outline-primary ms-3" asp-action="Edit">
                        Edit your profile
                    </a>
                </div>
            }
        </div>          
    </div>
    <div class="row">
        <div class="col-6">
            <p>@Model.Company.About</p>
        </div>
        <div class="col-6">
            <img class="img-fluid" src="@Model.Company.ImagePath"/>
        </div>
    </div>
    <div class="row">
        <div class="list-group">
            <a asp-controller="Vacancie" asp-action="Create" class="list-group-item btn btn-primary text-center">
                <span class="display-5"><i class="fa-solid fa-plus"></i> Create new</span>
            </a>
            @foreach (VacancieIndexVm vacancie in Model.Vacancies)
            {
                <a asp-controller="Vacancie" asp-action="Details" asp-route-id="@vacancie.Id" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@vacancie.Name</h5>
                        <small>@vacancie.CreatedAgo</small>
                    </div>
                    <p class="mb-1">@vacancie.ShortDescription</p>
                    <small class="text-muted">And some small print.</small>
                </a>
            }
        </div>
    </div>
</div>

