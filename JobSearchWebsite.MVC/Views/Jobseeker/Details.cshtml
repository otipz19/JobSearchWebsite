@model Data.Entities.Jobseeker
@using System.Security.Claims
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-between">
        <div class="col-8">
            <h3 class="display-3">@Model.Name profile</h3>
        </div>
        <div class="col-4">
            @if(User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.AppUserId)
            {
                <a class="btn btn-outline-primary" asp-action="Edit">
                    Edit your profile
                </a>
            }
        </div>          
    </div>
    <div class="row">
        <div class="col-6">
            <p>@Model.Name</p>
            <p>@Model.About</p>
        </div>
        <div class="col-6">
            <img class="img-fluid" src="@Model.ImagePath"/>
        </div>
    </div>
</div>

